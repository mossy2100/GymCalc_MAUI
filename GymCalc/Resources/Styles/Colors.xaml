<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- App colors -->
    <Color x:Key="Primary">#ff6c00</Color>
    <Color x:Key="SecondaryLight">#ffd2b2</Color>
    <Color x:Key="SecondaryDark">#4d2000</Color>

    <!-- Button colors -->
    <Color x:Key="SuccessColor">#0fb300</Color>
    <Color x:Key="DangerColor">#cc0022</Color>

    <!-- Error message colors -->
    <Color x:Key="ErrorMessageText">#ff002b</Color>
    <Color x:Key="ErrorMessageBackgroundLight">#ffe5ea</Color>
    <Color x:Key="ErrorMessageBackgroundDark">#330008</Color>

    <!-- Greys -->
    <Color x:Key="White">#ffffff</Color>
    <Color x:Key="Gray50">#f0f0f0</Color>
    <Color x:Key="Gray100">#e1e1e1</Color>
    <Color x:Key="Gray200">#c8c8c8</Color>
    <Color x:Key="Gray300">#acacac</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6e6e6e</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>
    <Color x:Key="Black">#000000</Color>

</ResourceDictionary>
