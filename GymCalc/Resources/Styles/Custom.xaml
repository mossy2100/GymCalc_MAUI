<?xml
    version="1.0"
    encoding="UTF-8"?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!--  Frame and border styles  -->

    <Style
        x:Key="ControlBorderStyle"
        TargetType="Border">
        <Setter
            Property="Stroke"
            Value="{StaticResource Primary}"/>
        <Setter
            Property="Padding"
            Value="0"/>
        <Setter
            Property="StrokeShape"
            Value="RoundRectangle 4"/>
        <Setter
            Property="BackgroundColor"
            Value="{AppThemeBinding Light={StaticResource Secondary},
                                    Dark={StaticResource Tertiary}}"/>
    </Style>

    <Style
        x:Key="ColorPickerFrameStyle"
        TargetType="Frame">
        <Setter
            Property="WidthRequest"
            Value="46"/>
        <Setter
            Property="HeightRequest"
            Value="46"/>
        <Setter
            Property="BackgroundColor"
            Value="Transparent"/>
        <Setter
            Property="BorderColor"
            Value="Transparent"/>
        <Setter
            Property="CornerRadius"
            Value="10"/>
    </Style>

    <!--  Grid styles  -->

    <Style
        x:Key="ButtonGridStyle"
        TargetType="Grid">
        <Setter
            Property="Padding"
            Value="{x:Static graphics:PageLayout.Spacing}"/>
        <Setter
            Property="BackgroundColor"
            Value="{AppThemeBinding Light={StaticResource Gray50},
                                    Dark={StaticResource Gray900}}"/>
        <Setter
            Property="ColumnSpacing"
            Value="{x:Static graphics:PageLayout.Spacing}"/>
        <Setter
            Property="RowDefinitions"
            Value="Auto"/>
    </Style>

    <!--  Text styles  -->

    <Style
        x:Key="ResultsTablePercent"
        TargetType="Label">
        <Setter
            Property="FontSize"
            Value="20"/>
        <Setter
            Property="FontAttributes"
            Value="Bold"/>
        <Setter
            Property="TextColor"
            Value="{AppThemeBinding Light={StaticResource Black},
                                    Dark={StaticResource White}}"/>
    </Style>

    <Style
        x:Key="ResultsTableHeader"
        TargetType="Label">
        <Setter
            Property="FontSize"
            Value="16"/>
        <Setter
            Property="FontAttributes"
            Value="Bold"/>
        <Setter
            Property="TextColor"
            Value="{AppThemeBinding Light={StaticResource Black},
                                    Dark={StaticResource White}}"/>
    </Style>

    <Style
        x:Key="ResultsTableIdeal"
        TargetType="Label">
        <Setter
            Property="FontSize"
            Value="16"/>
        <Setter
            Property="TextColor"
            Value="{AppThemeBinding Light={StaticResource Black},
                                    Dark={StaticResource White}}"/>
    </Style>

    <Style
        x:Key="ResultsTableClosest"
        TargetType="Label">
        <Setter
            Property="FontSize"
            Value="16"/>
        <Setter
            Property="TextColor"
            Value="{StaticResource Primary}"/>
    </Style>

    <Style
        x:Key="ErrorMessageStyle"
        TargetType="Label">
        <Setter
            Property="TextColor"
            Value="{StaticResource ErrorMessageText}"/>
        <Setter
            Property="FontSize"
            Value="14"/>
    </Style>

</ResourceDictionary>
