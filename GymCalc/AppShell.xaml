<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymCalc.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:pages="clr-namespace:GymCalc.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:gymCalc="clr-namespace:GymCalc"
    x:DataType="gymCalc:AppShell"
    NavBarHasShadow="true">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior TextOverride=""></BackButtonBehavior>
    </Shell.BackButtonBehavior>

    <Shell.FlyoutHeader>
        <VerticalStackLayout
            Padding="20"
            BackgroundColor="{StaticResource Primary}"
            Spacing="10"
            VerticalOptions="Start">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="GymCalc"
                TextColor="White" />
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="by Shaun Moss"
                TextColor="White" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Calculator" Style="{StaticResource CalculatorFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:CalculatorPage}" />
    </FlyoutItem>

    <MenuItem
        Text="Bars"
        IconImageSource="{AppThemeBinding Light='bar_icon_black_300.png',
                                          Dark='bar_icon_white_300.png'}"
        Command="{Binding GoToListCommand}"
        CommandParameter="Bar" />

    <MenuItem
        Text="Plates"
        IconImageSource="{AppThemeBinding Light='plate_icon_black_300.png',
                                          Dark='plate_icon_white_300.png'}"
        Command="{Binding GoToListCommand}"
        CommandParameter="Plate" />

    <MenuItem
        Text="Dumbbells"
        IconImageSource="{AppThemeBinding Light='dumbbell_icon_black_300.png',
                                          Dark='dumbbell_icon_white_300.png'}"
        Command="{Binding GoToListCommand}"
        CommandParameter="Dumbbell" />

    <MenuItem
        Text="Kettlebells"
        IconImageSource="{AppThemeBinding Light='kettlebell_icon_black_300.png',
                                          Dark='kettlebell_icon_white_300.png'}"
        Command="{Binding GoToListCommand}"
        CommandParameter="Kettlebell" />

    <FlyoutItem Title="Settings" Style="{StaticResource SettingsFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>

    <MenuItem
        Text="Instructions"
        IconImageSource="{AppThemeBinding Light='help_icon_black_300.png',
                                          Dark='help_icon_white_300.png'}"
        Command="{Binding GoToInstructionsPageCommand}" />

    <MenuItem
        Text="About GymCalc"
        IconImageSource="{AppThemeBinding Light='about_icon_black_300.png',
                                          Dark='about_icon_white_300.png'}"
        Command="{Binding GoToAboutPageCommand}" />

    <!-- Global pages have to be declared as ShellContent and they're always singletons regardless
    of what you specify in DI. -->
    <ShellContent ContentTemplate="{DataTemplate pages:ListPage}" Route="list" />
    <ShellContent ContentTemplate="{DataTemplate pages:HtmlPage}" Route="html" />

</Shell>
