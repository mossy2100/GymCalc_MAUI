<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymCalc.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:pages="clr-namespace:GymCalc.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavBarHasShadow="true">

    <Shell.FlyoutHeader>
        <VerticalStackLayout
            Padding="20"
            BackgroundColor="{StaticResource Primary}"
            Spacing="10"
            VerticalOptions="Start">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="GymCalc"
                TextColor="White" />
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="by Shaun Moss"
                TextColor="White" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Calculator" Icon="calculator_icon_300.png">
        <ShellContent
            Title="Calculator"
            ContentTemplate="{DataTemplate pages:CalculatorPage}"
            Icon="calculator_icon_300.png" />
        <ShellContent
            Title="Bars"
            ContentTemplate="{DataTemplate pages:BarsPage}"
            Icon="barbell_icon_300.png" />
        <ShellContent
            Title="Plates"
            ContentTemplate="{DataTemplate pages:PlatesPage}"
            Icon="plate_icon_300.png" />
        <ShellContent
            Title="Dumbbells"
            ContentTemplate="{DataTemplate pages:DumbbellsPage}"
            Icon="dumbbell_icon_300.png" />
        <ShellContent
            Title="Kettlebells"
            ContentTemplate="{DataTemplate pages:KettlebellsPage}"
            Icon="kettlebell_icon_300.png" />
    </FlyoutItem>

    <FlyoutItem Title="About GymCalc" Icon="about_icon_300.png">
        <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
    </FlyoutItem>

</Shell>
