<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymCalc.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:pages="clr-namespace:GymCalc.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    NavBarHasShadow="true">

    <Shell.FlyoutHeader>
        <VerticalStackLayout
            Padding="20"
            BackgroundColor="{StaticResource Primary}"
            Spacing="10"
            VerticalOptions="Start">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="GymCalc"
                TextColor="White" />
            <Label
                FontAttributes="Bold"
                FontSize="16"
                Text="by Shaun Moss"
                TextColor="White" />
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Calculator" Style="{StaticResource CalculatorFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:CalculatorPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Bars" Style="{StaticResource BarsFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:BarsPage}" Route="bars" />
    </FlyoutItem>

    <FlyoutItem Title="Plates" Style="{StaticResource PlatesFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:PlatesPage}" Route="plates" />
    </FlyoutItem>

    <FlyoutItem Title="Dumbbells" Style="{StaticResource DumbbellsFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:DumbbellsPage}" Route="dumbbells" />
    </FlyoutItem>

    <FlyoutItem Title="Kettlebells" Style="{StaticResource KettlebellsFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:KettlebellsPage}" Route="kettlebells" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Style="{StaticResource SettingsFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="About GymCalc" Style="{StaticResource AboutFlyoutItem}">
        <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
    </FlyoutItem>

    <ShellContent ContentTemplate="{DataTemplate pages:EditPage}" Route="edit" />
    <ShellContent ContentTemplate="{DataTemplate pages:DeletePage}" Route="delete" />
    <ShellContent ContentTemplate="{DataTemplate pages:ResetPage}" Route="reset" />

</Shell>
