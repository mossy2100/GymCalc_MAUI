<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GymCalc.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:pages="clr-namespace:GymCalc.Pages"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    FlyoutBehavior="Disabled"
    NavBarHasShadow="true">

    <!-- <ShellContent ContentTemplate="{DataTemplate pages:InitializationPage}" Route="init" /> -->

    <TabBar>
        <Tab Title="Calculator" Icon="calculator_icon_300.png">
            <ShellContent ContentTemplate="{DataTemplate pages:CalculatorPage}" Route="calculator" />
        </Tab>
        <Tab Title="Bars" Icon="barbell_icon_300.png">
            <ShellContent ContentTemplate="{DataTemplate pages:BarsPage}" />
        </Tab>
        <Tab Title="Plates" Icon="plate_icon_300.png">
            <ShellContent ContentTemplate="{DataTemplate pages:PlatesPage}" />
        </Tab>
        <Tab Title="Dumbbells" Icon="dumbbell_icon_300.png">
            <ShellContent ContentTemplate="{DataTemplate pages:DumbbellsPage}" />
        </Tab>
        <Tab Title="About" Icon="about_icon_300.png">
            <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
        </Tab>
    </TabBar>

</Shell>
