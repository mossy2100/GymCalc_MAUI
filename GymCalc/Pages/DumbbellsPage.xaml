<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.DumbbellsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Dumbbells">

    <ScrollView Padding="10" VerticalOptions="Fill">
        <Grid
            x:Name="DumbbellsGrid"
            ColumnDefinitions="*,Auto,*,Auto"
            ColumnSpacing="10"
            RowDefinitions="Auto"
            RowSpacing="20">
            <Label
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Text="Select which dumbbell weights (kg) are available:" />
        </Grid>
    </ScrollView>

</ContentPage>
