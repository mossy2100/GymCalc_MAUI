<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.DumbbellsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Dumbbells">

    <ScrollView Padding="{x:Static graphics:PageLayout.Spacing}" VerticalOptions="Start">
        <VerticalStackLayout x:Name="DumbbellsStackLayout" Spacing="{x:Static graphics:PageLayout.DoubleSpacing}">
            <Label x:Name="DumbbellsGridLabel" />
            <Grid
                x:Name="DumbbellsGrid"
                ColumnSpacing="{x:Static graphics:PageLayout.Spacing}"
                RowSpacing="{x:Static graphics:PageLayout.DoubleSpacing}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
