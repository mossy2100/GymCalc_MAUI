<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.DumbbellsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:app="clr-namespace:GymCalc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Dumbbells">

    <ScrollView Padding="{x:Static app:App.Padding}" VerticalOptions="Start">
        <VerticalStackLayout x:Name="DumbbellsStackLayout" Spacing="{x:Static app:App.DoubleSpacing}">
            <Label Text="Select which dumbbell weights (kg) are available:" />
            <Grid
                x:Name="DumbbellsGrid"
                ColumnSpacing="{x:Static app:App.Spacing}"
                RowSpacing="{x:Static app:App.DoubleSpacing}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
