<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.ListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="List">

    <ScrollView Padding="{x:Static graphics:PageLayout.Spacing}" VerticalOptions="Fill">
        <VerticalStackLayout
            x:Name="ListStack"
            Spacing="{x:Static graphics:PageLayout.DoubleSpacing}"
            VerticalOptions="Start">

            <Label x:Name="ListLabel" />

            <Grid
                x:Name="ListGrid"
                ColumnSpacing="{x:Static graphics:PageLayout.Spacing}"
                RowSpacing="{x:Static graphics:PageLayout.DoubleSpacing}" />

            <Grid
                x:Name="ListButtons"
                ColumnDefinitions="*,*,*"
                ColumnSpacing="{x:Static graphics:PageLayout.Spacing}"
                RowDefinitions="Auto">
                <Button
                    x:Name="AddButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Clicked="AddButton_OnClicked"
                    ImageSource="plus_icon_white_16.png"
                    Text="Add" />
                <Button
                    x:Name="EditButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Clicked="EditButton_OnClicked"
                    ImageSource="edit_icon_white_16.png"
                    Text="Edit" />
                <Button
                    x:Name="ViewButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Clicked="ViewButton_OnClicked"
                    ImageSource="view_icon_white_16.png"
                    IsVisible="False"
                    Text="View" />
                <Button
                    x:Name="ResetButton"
                    Grid.Row="0"
                    Grid.Column="2"
                    Clicked="ResetButton_OnClicked"
                    ImageSource="reset_icon_white_16.png"
                    Text="Reset" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
