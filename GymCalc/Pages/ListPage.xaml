<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.ListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:viewModels="clr-namespace:GymCalc.ViewModels"
    xmlns:pages="clr-namespace:GymCalc.Pages"
    xmlns:drawables="clr-namespace:GymCalc.Drawables"
    x:DataType="viewModels:ListViewModel"
    Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*,Auto">
        <Label x:Name="InstructionsLabel" Grid.Row="0" FontSize="14" />

        <ScrollView Grid.Row="1" Padding="{x:Static graphics:PageLayout.Spacing}">
            <!-- <Grid -->
            <!--     x:Name="ListGrid" -->
            <!--     ColumnSpacing="{x:Static graphics:PageLayout.Spacing}" -->
            <!--     RowSpacing="{x:Static graphics:PageLayout.DoubleSpacing}" /> -->

            <CollectionView ItemsSource="{Binding Drawables}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="drawables:GymObjectDrawable">
                        <Grid ColumnDefinitions="*,Auto,Auto,Auto" RowSpacing="10">
                            <GraphicsView Grid.Column="0" Drawable="{Binding .}"
                                HeightRequest="{Binding Height}" WidthRequest="200"
                                HorizontalOptions="Center" VerticalOptions="Center" />
                            <CheckBox Grid.Column="1"
                                HeightRequest="32" WidthRequest="40"
                                HorizontalOptions="Start" VerticalOptions="Center"
                                IsChecked="{Binding GymObject.Enabled}" />
                            <Button Grid.Column="2" Style="{StaticResource EditIconButtonStyle}"
                                HeightRequest="32" WidthRequest="32"
                                HorizontalOptions="Center" VerticalOptions="Center"
                                Command="{Binding BindingContext.EditCommand,
                                    Source={RelativeSource AncestorType={x:Type pages:ListPage}}}"
                                CommandParameter="{Binding .}" />
                            <Button Grid.Column="3" Style="{StaticResource DeleteIconButtonStyle}"
                                HeightRequest="32" WidthRequest="32"
                                HorizontalOptions="Center" VerticalOptions="Center"
                                Command="{Binding BindingContext.DeleteCommand,
                                    Source={RelativeSource AncestorType={x:Type pages:ListPage}}}"
                                CommandParameter="{Binding .}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>

        <Grid
            Grid.Row="2"
            ColumnDefinitions="*,*,*"
            Style="{StaticResource ButtonGridStyle}">
            <input:CheckBox
                x:Name="EditModeCheckBox"
                Grid.Column="0"
                IsChecked="{Binding EditMode}"
                CheckChanged="EditModeCheckBox_OnCheckChanged"
                HeightRequest="36"
                HorizontalOptions="Start"
                Text="Edit mode" />
            <Button
                x:Name="AddButton"
                Grid.Column="1"
                Command="{Binding AddCommand}"
                Style="{StaticResource AddButtonStyle}" />
            <Button
                x:Name="ResetButton"
                Grid.Column="2"
                Command="{Binding ResetCommand}"
                Style="{StaticResource ResetButtonStyle}" />
        </Grid>
    </Grid>

</ContentPage>
