<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.ListPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:viewModels="clr-namespace:GymCalc.ViewModels"
    xmlns:pages="clr-namespace:GymCalc.Pages"
    xmlns:drawables="clr-namespace:GymCalc.Drawables"
    x:DataType="viewModels:ListViewModel"
    Title="{Binding Title}">

    <Grid Padding="0"
        RowDefinitions="Auto,*,Auto" RowSpacing="{x:Static graphics:PageLayout.Spacing}">

        <Label
            x:Name="InstructionsLabel"
            Grid.Row="0"
            Padding="{x:Static graphics:PageLayout.Spacing}"
            FontSize="14"
            Text="{Binding InstructionsText}" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Drawables}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="drawables:GymObjectDrawable">
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto" ColumnSpacing="5" Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{Binding Height}" />
                        </Grid.RowDefinitions>
                        <GraphicsView
                            Grid.Column="0"
                            Drawable="{Binding .}"
                            HeightRequest="{Binding Height}"
                            WidthRequest="{Binding Width}"
                            HorizontalOptions="Center"
                            VerticalOptions="Center" />
                        <input:CheckBox
                            Grid.Column="1"
                            Type="Material"
                            HeightRequest="32"
                            WidthRequest="32"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"
                            IsChecked="{Binding GymObject.Enabled, Mode=TwoWay}"
                            CheckChangedCommand="{Binding BindingContext.EnableItemCommand,
                                Source={RelativeSource AncestorType={x:Type pages:ListPage}}}"
                            CommandParameter="{Binding GymObject}" />
                        <Button
                            Grid.Column="2"
                            Style="{StaticResource EditIconButtonStyle}"
                            HeightRequest="32"
                            WidthRequest="32"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Command="{Binding BindingContext.EditItemCommand,
                                Source={RelativeSource AncestorType={x:Type pages:ListPage}}}"
                            CommandParameter="{Binding GymObject}" />
                        <Button
                            Grid.Column="3"
                            Style="{StaticResource DeleteIconButtonStyle}"
                            HeightRequest="32"
                            WidthRequest="32"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Command="{Binding BindingContext.DeleteItemCommand,
                                Source={RelativeSource AncestorType={x:Type pages:ListPage}}}"
                            CommandParameter="{Binding GymObject}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Grid
            Grid.Row="2"
            ColumnDefinitions="*,*"
            Style="{StaticResource ButtonGridStyle}">
            <Button
                Grid.Column="0"
                Command="{Binding AddItemCommand}"
                Style="{StaticResource AddButtonStyle}" />
            <Button
                Grid.Column="1"
                Command="{Binding ResetItemsCommand}"
                Style="{StaticResource ResetButtonStyle}" />
        </Grid>
    </Grid>

</ContentPage>
