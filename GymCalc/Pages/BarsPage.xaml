<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GymCalc.Pages.BarsPage"
    Title="Bars">

    <ScrollView VerticalOptions="Fill">
        <ScrollView.Padding>
            <OnPlatform x:TypeArguments="Thickness" Default="10">
                <On Platform="iOS" Value="10,40,10,10" />
            </OnPlatform>
        </ScrollView.Padding>
        <Grid
            x:Name="BarsGrid"
            RowDefinitions="Auto"
            ColumnDefinitions="*,Auto"
            Padding="10"
            RowSpacing="10"
            ColumnSpacing="10">

            <Label
                Text="Select which bar weights (kg) are available:"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2">
            </Label>

        </Grid>
    </ScrollView>

</ContentPage>
