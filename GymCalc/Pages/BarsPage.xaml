<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.BarsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Bars">

    <ScrollView Padding="{x:Static graphics:PageLayout.Spacing}" VerticalOptions="Start">
        <VerticalStackLayout x:Name="BarsStackLayout" Spacing="{x:Static graphics:PageLayout.DoubleSpacing}">
            <Label Text="Select which bar weights (kg) are available:" />
            <Grid
                x:Name="BarsGrid"
                ColumnSpacing="{x:Static graphics:PageLayout.Spacing}"
                RowSpacing="{x:Static graphics:PageLayout.DoubleSpacing}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
