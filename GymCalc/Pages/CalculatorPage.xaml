<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GymCalc.Pages.CalculatorPage"
    Title="Calculator">

    <ScrollView>
        <VerticalStackLayout
            x:Name="CalculatorLayout"
            Spacing="10"
            Padding="10">

            <!-- Item 0: Form -->
            <Grid
                ColumnDefinitions="2*,*"
                RowDefinitions="Auto,Auto"
                Padding="0"
                RowSpacing="10">

                <!-- Row 0: Max weight -->
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Maximum weight (kg)"
                    FontSize="16"
                    VerticalTextAlignment="Center" />
                <Entry
                    x:Name="MaxWeightEntry"
                    Grid.Row="0"
                    Grid.Column="1"
                    FontSize="16"
                    Keyboard="Numeric"
                    VerticalTextAlignment="Center"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Tertiary}}" />

                <!-- Row 1: Bar weight -->
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Bar weight (kg)"
                    FontSize="16"
                    VerticalTextAlignment="Center" />
                <Picker
                    x:Name="BarWeightPicker"
                    Grid.Row="1"
                    Grid.Column="1"
                    FontSize="16"
                    VerticalTextAlignment="Center"
                    BackgroundColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource Tertiary}}" />
            </Grid>

            <!-- Item 1: Calculate button -->
            <Button
                Text="Calculate"
                Clicked="CalculateButtonClicked"
                Style="{StaticResource ButtonStyle}" />

            <!-- Item 2: Results message -->
            <Label
                x:Name="ResultsLabel"
                Text=""
                FontSize="16"
                FontAttributes="Bold" Padding="0,0,0,20" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
