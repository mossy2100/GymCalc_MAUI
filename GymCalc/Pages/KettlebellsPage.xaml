<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.KettlebellsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:app="clr-namespace:GymCalc"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Kettlebells">

    <ScrollView Padding="{x:Static app:App.Padding}" VerticalOptions="Start">
        <VerticalStackLayout x:Name="KettlebellsStackLayout" Spacing="{x:Static app:App.Spacing}">
            <Label Text="Select which kettlebell weights (kg) are available:" />
            <Grid
                x:Name="KettlebellsGrid"
                ColumnSpacing="{x:Static app:App.Spacing}"
                RowSpacing="{x:Static app:App.Spacing}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
