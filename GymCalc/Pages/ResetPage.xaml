<?xml
    version="1.0"
    encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:viewModels="clr-namespace:GymCalc.ViewModels"
    x:Class="GymCalc.Pages.ResetPage"
    x:DataType="viewModels:ResetViewModel"
    Title="{Binding Title}">

    <Grid
        RowDefinitions="*,Auto">
        <Label
            Grid.Row="0"
            Text="{Binding ResetMessage}"
            Padding="{x:Static graphics:PageLayout.Spacing}"/>

        <!--  Buttons  -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="*,*"
            Style="{StaticResource ButtonGridStyle}">
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Command="{Binding CancelCommand}"
                Style="{StaticResource CancelButtonStyle}"/>
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Command="{Binding ResetCommand}"
                Style="{StaticResource ResetButtonStyle}"/>
        </Grid>
    </Grid>

</ContentPage>
