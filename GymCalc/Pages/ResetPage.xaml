<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.ResetPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Reset">

    <Grid RowDefinitions="*,Auto">
        <Label
            x:Name="ResetMessage"
            Grid.Row="0"
            Padding="{x:Static graphics:PageLayout.Spacing}" />

        <!--  Buttons  -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="Auto,Auto"
            Style="{StaticResource ButtonGridStyle}">
            <Button
                x:Name="CancelButton"
                Grid.Row="0"
                Grid.Column="0"
                Clicked="CancelButton_OnClicked"
                Style="{StaticResource CancelButtonStyle}" />
            <Button
                x:Name="ResetButton"
                Grid.Row="0"
                Grid.Column="1"
                Clicked="ResetButton_OnClicked"
                Style="{StaticResource ResetButtonStyle}" />
        </Grid>
    </Grid>

</ContentPage>
