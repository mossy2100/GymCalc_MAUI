<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="GymCalc.Pages.DeletePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Delete">

    <ScrollView Padding="{x:Static graphics:PageLayout.Spacing}" VerticalOptions="Fill">
        <VerticalStackLayout
            x:Name="DeleteForm"
            Spacing="{x:Static graphics:PageLayout.DoubleSpacing}"
            VerticalOptions="Start">

            <Label x:Name="DeleteMessage" FontSize="16" />

            <!--  Buttons  -->
            <Grid
                ColumnDefinitions="Auto,Auto"
                ColumnSpacing="{x:Static graphics:PageLayout.Spacing}"
                RowDefinitions="Auto">
                <Button
                    x:Name="CancelButton"
                    Grid.Row="0"
                    Grid.Column="0"
                    Clicked="CancelButton_OnClicked"
                    Style="{StaticResource CancelButtonStyle}" />
                <Button
                    x:Name="DeleteButton"
                    Grid.Row="0"
                    Grid.Column="1"
                    Clicked="DeleteButton_OnClicked"
                    Style="{StaticResource DeleteButtonStyle}" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
