<?xml
    version="1.0"
    encoding="utf-8"?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:graphics="clr-namespace:GymCalc.Graphics"
    xmlns:viewModels="clr-namespace:GymCalc.ViewModels"
    x:Class="GymCalc.Pages.DeletePage"
    x:DataType="viewModels:DeleteViewModel"
    Title="{Binding Title}">

    <Grid
        RowDefinitions="*,Auto">
        <Label
            Grid.Row="0"
            Padding="{x:Static graphics:PageLayout.Spacing}"
            LineBreakMode="WordWrap"
            Text="{Binding ConfirmDeletionMessage}" />

        <!--  Buttons  -->
        <Grid
            Grid.Row="1"
            ColumnDefinitions="*,*"
            Style="{StaticResource ButtonGridStyle}">
            <Button
                Grid.Row="0"
                Grid.Column="0"
                Command="{Binding CancelCommand}"
                Style="{StaticResource CancelButtonStyle}" />
            <Button
                Grid.Row="0"
                Grid.Column="1"
                Command="{Binding DeleteItemCommand}"
                Style="{StaticResource DeleteButtonStyle}" />
        </Grid>
    </Grid>

</ContentPage>
