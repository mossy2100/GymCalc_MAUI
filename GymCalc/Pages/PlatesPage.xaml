<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="GymCalc.Pages.PlatesPage"
    Title="Plates">

    <ScrollView VerticalOptions="Fill">
        <ScrollView.Padding>
            <OnPlatform x:TypeArguments="Thickness" Default="10">
                <On Platform="iOS" Value="10,40,10,10" />
            </OnPlatform>
        </ScrollView.Padding>
        <Grid
            x:Name="PlatesGrid"
            RowDefinitions="Auto"
            ColumnDefinitions="*,Auto"
            Padding="10"
            RowSpacing="10"
            ColumnSpacing="10">

            <Label
                Text="Select which plate weights (kg) are available:"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2">
            </Label>
        </Grid>
    </ScrollView>

